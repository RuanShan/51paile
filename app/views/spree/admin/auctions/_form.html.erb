<div data-hook="admin_image_form_fields">

  <div data-hook="admin_auction_form_title">
    <%= f.field_container :title, class: ['form-group'] do %>
      <%= f.label :title %>
      <%= f.text_field :title, class: 'form-control title' %>
      <%= f.error_message_on :title %>
    <% end %>
  </div>

  <div class="row">
    <div class="col-md-4">
      <div data-hook="variant" class="form-group">
        <%= f.label :variant_id, Spree::Variant.model_name.human %>
        <%= f.select :variant_id, @variants, {}, {:class => 'select2'} %>
      </div>

      <div data-hook="admin_auction_form_starting_price">
        <%= f.field_container :starting_price, class: ['form-group'] do %>
          <%= f.label :starting_price %>
          <%= f.text_field :starting_price, class: 'form-control starting_price' %>
          <%= f.error_message_on :starting_price %>
        <% end %>
      </div>

      <div data-hook="admin_auction_form_starts_at">
        <%= f.field_container :starts_at, class: ['form-group'] do %>
          <%= f.label :starts_at %>
          <%= f.error_message_on :starts_at %>
          <%= f.text_field :starts_at, value: datetimepicker_field_value(@auction.starts_at), class: 'datetimepicker form-control' %>
        <% end %>
      </div>

      <div data-hook="admin_auction_form_display_starts_at">
        <%= f.field_container :display_starts_at, class: ['form-group'] do %>
          <%= f.label :display_starts_at %>
          <%= f.error_message_on :display_starts_at %>
          <%= f.text_field :display_starts_at, value: datepicker_field_value(@auction.display_starts_at), class: 'datepicker form-control' %>
        <% end %>
      </div>

    </div>

    <div class="col-md-4">

      <div data-hook="admin_auction_form_evaluated_price">
        <%= f.field_container :evaluated_price, class: ['form-group'] do %>
          <%= f.label :evaluated_price %>
          <%= f.text_field :evaluated_price, class: 'form-control evaluated_price' %>
          <%= f.error_message_on :evaluated_price %>
        <% end %>
      </div>

      <div data-hook="admin_auction_form_price_increment">
        <%= f.field_container :price_increment, class: ['form-group'] do %>
          <%= f.label :price_increment %>
          <%= f.text_field :price_increment, class: 'form-control price_increment' %>
          <%= f.error_message_on :price_increment %>
        <% end %>
      </div>

      <div data-hook="admin_auction_form_ends_at">
        <%= f.field_container :ends_at, class: ['form-group'] do %>
          <%= f.label :ends_at %>
          <%= f.error_message_on :ends_at %>
          <%= f.text_field :ends_at, value: datetimepicker_field_value(@auction.ends_at), class: 'datetimepicker form-control' %>
        <% end %>
      </div>

      <div data-hook="admin_auction_form_display_ends_at">
        <%= f.field_container :display_ends_at, class: ['form-group'] do %>
          <%= f.label :display_ends_at %>
          <%= f.error_message_on :display_ends_at %>
          <%= f.text_field :display_ends_at, value: datepicker_field_value(@auction.display_ends_at), class: 'datepicker form-control' %>
        <% end %>
      </div>

    </div>

    <div class="col-md-4">
      <div data-hook="admin_auction_form_deposit">
        <%= f.field_container :deposit, class: ['form-group'] do %>
          <%= f.label :deposit %>
          <%= f.text_field :deposit, class: 'form-control deposit' %>
          <%= f.error_message_on :deposit %>
        <% end %>
      </div>
      <div data-hook="admin_auction_form_reserve_price">
        <%= f.field_container :reserve_price, class: ['form-group'] do %>
          <%= f.label :reserve_price %>
          <%= f.text_field :reserve_price, class: 'form-control reserve_price' %>
          <%= f.error_message_on :reserve_price %>
        <% end %>
      </div>
    </div>
  </div>

  <div data-hook="admin_auction_form_description">
    <%= f.field_container :description, class: ['form-group'] do %>
      <%= f.label :description %>
      <%= f.text_area :description, { rows: '20' , class: 'form-control'}  %>
      <%= f.error_message_on :description %>
    <% end %>
  </div>


</div>

<p id="notice"><%= notice %></p>

<h1>Listing Auction Foregifts</h1>

<table>
  <thead>
    <tr>
      <th>Auction</th>
      <th>Payment method</th>
      <th>State</th>
      <th>Amount</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @auction_foregifts.each do |auction_foregift| %>
      <tr>
        <td><%= auction_foregift.auction_id %></td>
        <td><%= auction_foregift.payment_method_id %></td>
        <td><%= auction_foregift.state %></td>
        <td><%= auction_foregift.amount %></td>
        <td><%= link_to 'Show', auction_foregift %></td>
        <td><%= link_to 'Edit', edit_auction_foregift_path(auction_foregift) %></td>
        <td><%= link_to 'Destroy', auction_foregift, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
